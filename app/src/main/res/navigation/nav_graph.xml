<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_controller"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.tiagosoutei.misturador.view.fragments.MainFragment"
        android:label="@string/lbl_home" >
        <action
            android:id="@+id/mainFragment_to_recipeInsertion"
            app:destination="@id/recipeInsertion" />
        <action
            android:id="@+id/mainFragment_to_consultRecipeFragment"
            app:destination="@id/consultRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/recipeInsertion"
        android:name="com.tiagosoutei.misturador.view.fragments.RecipeInsertion"
        android:label="@string/lbl_recipe_insetion"
        tools:layout="@layout/recipe_insertion_fragment" />
    <fragment
        android:id="@+id/consultRecipeFragment"
        android:name="com.tiagosoutei.misturador.view.fragments.ConsultRecipeFragment"
        android:label="@string/lbl_consult_recipe"
        tools:layout="@layout/consult_recipe_fragment" />
</navigation>